# === VRChat OSC Configuration ===
# IP address on which this app listens for incoming OSC messages from VRChat
VRCHAT_OSC_RECEIVE_IP=127.0.0.1
# Port used to receive OSC messages from VRChat (default: 9001)
VRCHAT_OSC_RECEIVE_PORT=9001
# IP address where OSC messages are sent to control VRChat parameters
VRCHAT_OSC_SEND_IP=127.0.0.1
# Port VRChat listens on for incoming OSC messages (default: 9000)
VRCHAT_OSC_SEND_PORT=9000

# === PiShock API Credentials ===
# Your PiShock username (found in your PiShock account)
PISHOCK_USERNAME=MyPishockUsername
# Your PiShock API key for authenticating API requests (smth like: 8225741e-b589-4ba2-a336-b712913989a1)
PISHOCK_API_KEY=MyPishockAPIKey
# Your unique PiShock code that identifies the connected device (smth like: 0BFKOCC32BE)
PISHOCK_CODE=MyPishockCode

# === Tail Grab Detection & Shock Parameters ===
# Name of the parameter in the tail's PhysBone component (used for detecting grabs)
AVATAR_TAIL_PARAMETER_NAME=tail
# Static shock intensity (range: 1–100) applied when the tail grab is released
# Will implement randomized or stretch-based intensity in the future
SHOCK_INTENSITY_ON_TAIL_GRAB=1
# Duration of the shock in seconds
SHOCK_DURATION_ON_TAIL_GRAB=1
# Cooldown time in seconds between shocks to prevent spamming
SHOCK_COOLDOWN_TIME=30
# Maximum allowed shock intensity as a safety safeguard (prevents accidental overdrive)
MAX_SHOCK_INTENSITY_SAFE_GUARD=80
# Message sent to the VRChat chatbox once a shock is delivered
SHOCK_MESSAGE="⚡️"
